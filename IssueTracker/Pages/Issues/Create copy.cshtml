@page
@model IssueTracker.Pages.Issues.CreateModel
@{
    ViewData["Title"] = "New Issue";
}
<h3 class="mb-3">New Issue</h3>
<form method="post" enctype="multipart/form-data">
  <div class="row g-3">
    <div class="col-md-3"><label class="form-label">Date Reported</label><input asp-for="Issue.DateReported" class="form-control" type="date"/></div>
    <div class="col-md-3"><label class="form-label">Reporter Name</label><input asp-for="Issue.ReporterName" class="form-control"/></div>
    <div class="col-md-6"><label class="form-label">Website URL</label><input asp-for="Issue.WebsiteUrl" class="form-control"/></div>
    <div class="col-md-4"><label class="form-label">Issue Type</label><input asp-for="Issue.IssueType" class="form-control"/></div>
    <div class="col-md-4"><label class="form-label">Issue Priority</label>
      <select asp-for="Issue.IssuePriority" class="form-select">
        <option>Low</option><option selected>Medium</option><option>High</option><option>Critical</option>
      </select>
    </div>
    <div class="col-md-4"><label class="form-label">Status</label>
      <select asp-for="Issue.Status" class="form-select">
        <option selected>Open</option><option>In Progress</option><option>Blocked</option><option>Resolved</option><option>Closed</option>
      </select>
    </div>
    <div class="col-md-6"><label class="form-label">Assigned To</label><input asp-for="Issue.AssignedTo" class="form-control"/></div>
    <div class="col-md-6"><label class="form-label">Screenshot</label><input type="file" name="screenshot" class="form-control" /></div>
    <div class="col-12"><label class="form-label">Issue Description</label><textarea asp-for="Issue.IssueDescription" class="form-control" rows="4"></textarea></div>
    <div class="col-md-3"><label class="form-label">Date Resolved</label><input asp-for="Issue.DateResolved" class="form-control" type="date"/></div>
    <div class="col-12"><label class="form-label">Resolution Notice</label><textarea asp-for="Issue.ResolutionNotice" class="form-control" rows="3"></textarea></div>
  </div>
  <div class="mt-3 d-flex gap-2">
    <button class="btn btn-primary" type="submit">Save</button>
    <a class="btn btn-secondary" asp-page="Index">Cancel</a>
  </div>
</form>